<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class="bg-light m-5 p-2 d-flex justify-content-center">
    <div>
      <h2 class="card-header text-center">
        <a href="/posts/{{post.id}}">{{post.title}}</a>
      </h2>

      <p class="p-3">{{post.content}}</p>

      <p>Posted by {{post.user.name}} on {{format_date post.date_posted}}</p>
    </div>
  </div>
{{/each}}