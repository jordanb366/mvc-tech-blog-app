<div class="">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Posted by {{user.name}} on {{format_date date_posted}}</p>
</div>

{{#if logged_in}}
  
  <form class="form new-comment-form">
      <div class="form-group">
      <input id="comment" type="text" name="comment" />
  <button type="submit" class="comment-button">Create Comment</button>
      </div>
    </form>
  </div>
   <script src="/js/comment.js"></script>
{{/if}}

{{#each comments}}
  <div class="">
    <h4>Comment</h4>
    <p>{{comments.comment}}</p>
    <p>Posted by {{comments.username}} on {{format_date date_posted}}</p>
  </div>
{{/each}}