{{!-- individual posts by id --}}
<div class="bg-light">
<div class="bg-light m-5 p-2 d-flex justify-content-center">
  <div>
    <h2 class="card-header text-center">{{title}}</h2>
    {{!-- Title of posts --}}
    <p class="p-2">{{content}}</p>
    {{!-- Content --}}
    <p>Posted by {{user.name}} on {{format_date date_posted}}</p>
    {{!-- Create by info and date --}}
  </div>
</div>


  <div class="bg-light p-5 m-5">
    <h6>Add a comment:</h3>
    <form class="form new-comment-form">
      <div class="form-group">
        <input id="comment" type="text" name="comment" />
        {{#if logged_in}}
        {{!-- Comment button only seen if logged in --}}
        <button type="submit" class="btn btn-primary btn-sm comment-button">Create
          Comment</button>
      </div>
    </form>
  </div>
  <script src="/js/comment.js"></script>
{{else}}
{{!-- If not logged in display link to logout --}}
  <a class="nav-link" href="/login">You must be logged in to create a comment</a>

{{/if}}

{{#each comments as |comment|}}
{{!-- Loops through each comments as comment --}}
  <div class="bg-secondary text-light m-5 p-2 d-flex justify-content-center">
    <div>
      <h6 class="text-center">Comment</h6>
      <p>{{comment.comment}}</p>
      {{!-- Comment --}}
      <p>Posted by
        {{comment.username}}

        on
        {{format_date comment.date_posted}}
      </p>
      {{!-- Create by username info and date posted --}}
    </div>
  </div>
{{/each}}
</div>