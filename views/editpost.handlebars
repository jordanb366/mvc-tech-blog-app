{{!-- Edit post page for handlebars --}}
<div div class="bg-light p-5 m-5">
  <div>
    <h3>Update or delete a post</h3>

    <form class="form update-form del-form">
      <div class="form-group">
      
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
        {{!-- Displays title --}}
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-control" type="text" id="content" name="content" >{{content}}</textarea>
        {{!-- Displays content --}}
      </div>
      
      <div class="form-group">
        
          <button type="submit" data-id="{{id}}" class="btn btn-primary">Update</button>
      </div>
    </form>
    
    <button data-id="{{id}}" class="btn btn-primary new-delete">Delete</button>
    {{!-- Dispalys id through data attribute to be use for delete js front end --}}

  </div>
 <script src="../../js/update.js"></script>
  <script src="../../js/delete.js"></script>
  {{!-- Scripts for update and delete js files --}}
  

